<div class="container">
  <% @colors.each do |color| %>
    <div style="width: 64px; margin: 10px; float: left;">
      <div><%= color %></div>
      <svg version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 168.5 183.8">
        <rect width="100%" height="100%" fill="<%= color %>"></rect>
      </svg>
    </div>
  <% end %>

  <div style="overflow: hidden; clear: both"></div>

  <% @fluo_colors.each do |colors| %>
    <%= render partial: 'welcome/colors/tomatoes_fluo', locals: colors %>
  <% end %>

  <div style="overflow: hidden; clear: both"></div>

  <% @tshirt_colors.each do |colors| %>
    <%= render partial: 'welcome/colors/tomatoes_one_color', locals: colors %>
  <% end %>
</div>
